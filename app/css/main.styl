@font-face
	font-family 'gt_bold'
	src url('fonts/gt-walsheim-bold-webfont.woff2') format('woff2'), url('fonts/gt-walsheim-bold-webfont.woff') format('woff')
	font-weight normal
	font-style normal

@font-face
	font-family 'gt_regular'
	src url('fonts/gt-walsheim-regular-webfont.woff2') format('woff2'), url('fonts/gt-walsheim-regular-webfont.woff') format('woff')
	font-weight normal
	font-style normal

.dg.ac
	display none

html
	height 100%
	padding 0
	margin 0

body
	width 100%
	height 100%
	margin 0
	padding 0
	font-family 'gt_regular'
	font-size 11px

	#main
		width 100%
		height 100%
		position fixed
		top 0
		left 0

		#parentbox
			height 100%
			width 300px
			margin-left 120px
			position absolute
			&:before
				content ' '
				display inline-block
				vertical-align middle
				height 100%

			#copy
				display inline-block
				vertical-align middle
				color #777777
				#title
					//transform scale(2,2)
					//transform-origin 0 100%
					height 200px
				.measure
					font-size 8px
					border-top solid 1px #777777
					padding-top 3px
					padding-bottom 5px
					.bar
						margin-top 3px
						position relative
						widht 100%
						height 13px
						background repeating-linear-gradient( 90deg, #ffffff00, #777777 1px, #ffffff00 1px, #ffffff00 10px );
						.inner
							position absolute
							height 100%
							width 100%
							transform scale(0,1)
							transform-origin 0 0
							background linear-gradient(to right, rgba(0,0,0,0) 0%,rgba(0,0,0,0.15) 100%)

			#footer
				border-top solid 1px #777777
				padding-top 100px
				a
					color #777777
					font-family gt_bold
					text-decoration none
					&:hover
						text-decoration underline

		//svg
		//	position absolute
		//	top 50%
		//	left 50%
		//	margin-left -398px
		//	margin-top -398px
		//	z-index 1

	#renderer
		width 100%
		height 100%
		position fixed
		top 0
		left 0



@media only screen and (max-width: 1024px) and (min-width: 768px)
	body
		#main
			#parentbox
				width 100%
				margin-left 0px
				#copy
					vertical-align bottom
					margin-bottom 40px
					position relative
					left 50%
					margin-left -330px
					#title
						position absolute
					#measures
						width 300px
						position relative 
						left 350px
						.measure
							.bar
								height 6px
					#footer
						padding-top 10px
						position relative 
						left 350px


@media only screen and (min-width: 1440px)
	body
		#main
			width 1440px
			left 50%
			margin-left -720px


/* ----------- Phone ----------- */

/* Portrait */
@media only screen and (min-device-width: 320px) and (max-device-width: 736px) and (-webkit-min-device-pixel-ratio: 2) and (orientation: portrait)
	body
		#main
			#parentbox
				width 100%
				margin-left 0px
				#copy
					width 95%
					vertical-align bottom
					margin-bottom 10px
					position relative
					#title
						transform scale(0.8)
						transform-origin 0 100%
						margin-left 5%
						margin-bottom 0px
						height 150px
					#measures
						width 95%
						left 5%
						position relative 
						.measure
							font-size 8px
							border-top solid 1px #777777
							padding-top 1px
							padding-bottom 2px
							.bar
								margin-top 3px
								height 6px
					#footer
						width 95%
						left 5%
						padding-top 10px
						position relative 

/* Landscape */
@media only screen and (min-device-width: 320px) and (max-device-width: 736px) and (-webkit-min-device-pixel-ratio: 2) and (orientation: landscape)
	body
		#main
			#parentbox
				width 100%
				margin-left 0px
				#copy
					margin-left 5%
					width 40%
					position relative
					margin-top -50px
					#title
						transform scale(0.6)
						transform-origin 0 100%
						margin-bottom 10px
						height 150px
					#measures
						position relative 
						.measure
							font-size 8px
							border-top solid 1px #777777
							padding-top 1px
							padding-bottom 2px
							.bar
								margin-top 3px
								height 6px
					#footer
						padding-top 10px
						position relative 

