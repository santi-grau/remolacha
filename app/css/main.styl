@font-face
	font-family 'gt_bold'
	src url('fonts/gt-walsheim-bold-webfont.woff2') format('woff2'), url('fonts/gt-walsheim-bold-webfont.woff') format('woff')
	font-weight normal
	font-style normal

@font-face
	font-family 'gt_regular'
	src url('fonts/gt-walsheim-regular-webfont.woff2') format('woff2'), url('fonts/gt-walsheim-regular-webfont.woff') format('woff')
	font-weight normal
	font-style normal


html
	height 100%
	padding 0
	margin 0
body
	width 100%
	height 100%
	margin 0
	padding 0
	font-family 'gt_regular'
	font-size 11px
	#parentbox
		height 100%
		&:before
			content ' '
			display inline-block
			vertical-align middle
			height 100%
		#copy
			display inline-block
			vertical-align middle
			color #777777
			.measure
				font-size 8px
				border-top solid 1px #777777
				padding-bottom 2px
				.bar
					position relative
					widht 100%
					height 13px
					background repeating-linear-gradient( 90deg, #ffffff, #777777 1px, #ffffff 1px, #ffffff 10px );
					.inner
						position absolute
						height 100%
						width 50%
						background linear-gradient(to right, rgba(0,0,0,0) 0%,rgba(0,0,0,0.15) 100%)
	#main
		width 100%
		height 100%
		position fixed
		top 0
		left 0
		svg
			position absolute
			top 50%
			left 50%
			margin-left -398px
			margin-top -398px
			z-index 1
	#renderer
		width 100%
		height 100%
		position fixed
		top 0
		left 0